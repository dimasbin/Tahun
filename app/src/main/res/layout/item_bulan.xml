<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="wrap_content"
    android:background="@drawable/item_recycler"
    android:id="@+id/mainLayoutBulan">



        <TextView
            android:id="@+id/list_nama_bulan"
            android:layout_width="match_parent"
            android:text="Bulan"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/id_sembunyi"
                android:layout_width="wrap_content"
                android:text="Rp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:textSize="1sp"
                android:visibility="invisible"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/idbulan_sembunyi"
                android:layout_width="wrap_content"
                android:text="Rp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:visibility="invisible"
                android:textSize="1sp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/rpsaja"
                android:layout_width="wrap_content"
                android:text="Rp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/jumlah_pengeluaran_bulan"
                android:layout_width="wrap_content"
                android:text="Se"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                android:layout_height="wrap_content" />

        </LinearLayout>

</LinearLayout>