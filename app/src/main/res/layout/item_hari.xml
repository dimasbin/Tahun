<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/mainLayoutHari"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_harian"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="6dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/harian_tanggal"
            android:layout_width="20dp"
            android:maxLength="2"
            android:layout_marginLeft="4dp"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_height="18dp"
            android:text="12-12-2012"
            />

        <TextView
            android:id="@+id/harian_id"
            android:layout_width="0dp"
            android:textSize="0sp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/harian_idhari"
            android:layout_width="0dp"
            android:textSize="0sp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/harian_namabulan"
            android:layout_width="0dp"
            android:textSize="0sp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/harian_nama_barang"
            android:layout_width="230dp"
            android:text="Nama Barang"
            android:textSize="12sp"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:layout_height="18dp" />

        <TextView
            android:id="@+id/harian_jumlah_barang"
            android:layout_width="match_parent"
            android:layout_marginRight="5dp"
            android:text="10000000"
            android:gravity="end"
            android:textAlignment="textEnd"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            android:layout_height="18dp" />



    </LinearLayout>

</LinearLayout>